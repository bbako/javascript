<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="org.phy.persistence.MemberDAO" >

	<select id="memberOne" resultType="org.phy.domain.MemberVO">
		select * from member where m_id = '1'
	</select>
	
	<select id="getTime" resultType="String">
		select now()
	</select>
	
	<select id="getLoginInfo" resultType="org.phy.domain.MemberVO">
		select * from member where email = #{email} and password = sha1(#{password})
	</select> 
	
	<select id="checkSessionKey" resultType="org.phy.domain.MemberVO">
		select * from member where sessionKey = #{key}
	</select>

</mapper>